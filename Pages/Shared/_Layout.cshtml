@using CTTSite.Pages.User.LogIn;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CTTSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CTTSite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">CTTSite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Store/AllProductsPage">Store</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Store/SpecificUserCartPage">Cart</a>
                        </li>
                        @{
                            if (Context.User.Identity != null && Context.User.IsInRole("admin") == true)
                            {
                            <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Admin/CreateStaffUser">Create Staff User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Admin/GetAllUsers">Users</a>
                            </li>
                            }
                         }
                        @{
                            if (Context.User.Identity != null && Context.User.IsInRole("staff") == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Staff/CreateClientUser">Create Client User</a>
                                </li>
                            }
                        }
                        <ul class="navbar-nav">
                            @{
                                if (Context.User.Identity.Name == null)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-page="/User/LogIn/LogInPage">Login</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item nav-link me-3">
                                        User: @Context.User.Identity.Name
                                    </li>
                                    <li class="nav-item nav-link me-3">
                                        <a class="nav-link" asp-area="" asp-page="/User/LogIn/EditUserDetails">Edit User Details</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-page="/User/LogIn/LogOutPage">Logout</a>
                                    </li>
                                }
                            }
                        </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CTTSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>