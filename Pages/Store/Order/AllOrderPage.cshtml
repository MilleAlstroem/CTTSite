@page
@model CTTSite.Pages.Store.Order.AllOrderPageModel
@{
}

<body class="text-center" style="background-color:#f6d8cc;">
    <h1 class="text-center"><b>@Model.User.Identity.Name's Orders</b></h1>
    <br />

    <table class="table table-bordered table-hover table-dark" width="80%">
        <thead>
            <tr class="btn-secondary active">
                <th>Order Number</th>
                <th>Order Shipped</th>
                <th>Order Cancelled</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.Orders != null)
            {
                foreach (Models.Order order in Model.Orders)
                {
                    <tr class="btn-secondary">
                        <td>
                            @order.ID
                        </td>
                        <td>
                            @if (order.Shipped)
                            {
                                <i class="fa fa-check"></i>
                            }
                            else
                            {
                                <i class="fa fa-times"></i>
                            }
                        </td>
                        <td>
                            @if (order.Cancelled)
                            {
                                <i class="fa fa-check"></i>
                            }
                            else
                            {
                                <i class="fa fa-times"></i>
                            }
                        </td>
                        <td>
                            £@order.TotalPrice
                        </td>
                        <td>
                            <a class="btn btn-danger" type="button" asp-page="DeleteOrderPage" asp-route-id="@order.ID"><i class="fa fa-trash"></i></a>
                            <a class="btn btn-secondary" type="button" asp-page="EditOrderPage" asp-route-id="@order.ID"><i class="fa fa-pencil-square-o"></i></a>
                            <a class="btn btn-secondary" type="button" asp-page="/Store/Shipping/SpecificShippingPage" asp-route-id="@order.ID"><i class="fa fa-info-circle"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</body>

<a asp-page="/Admin/ToolsPage" class="btn btn-outline-dark">Back</a>