@page "{id:int}"
@model CTTSite.Pages.Store.UpdateProductPageModel
@{
}

<h4 class="text-center"><b>Update Product</b></h4>
<br />
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Item.ID" class="control-lable"></label>
        <input asp-for="@Model.Item.ID" class="form-control" readonly="@(true)" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.Name" class="control-lable"></label>
        <input asp-for="@Model.Item.Name" class="form-control" />
        <span asp-validation-for="@Model.Item.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.Description" class="control-lable"></label>
        <input asp-for="@Model.Item.Description" class="form-control" />
        <span asp-validation-for="@Model.Item.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.Price" class="control-lable"></label>
        <input asp-for="@Model.Item.Price" class="form-control" />
        <span asp-validation-for="@Model.Item.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.Stock" class="control-lable"></label>
        <input asp-for="@Model.Item.Stock" class="form-control" />
        <span asp-validation-for="@Model.Item.Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.IMG" class="control-lable"></label>
        <input asp-for="@Model.Item.IMG" class="form-control" />
        <span asp-validation-for="@Model.Item.IMG" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>