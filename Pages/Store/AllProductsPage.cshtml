@page
@model CTTSite.Pages.Store.AllProductsPageModel
@{
}


<h1 class="text-center"><b>Store</b></h1>

<div class="row">

        @foreach(var Item in Model.Items)
        {
            <div style="width:20%">
            <a class="text-decoration-none text-black" asp-page="SpecificProductPage" asp-route-id="@Item.ID">
                <div class="card align-content-center" style="background-color:#f6d8cc;">
                    <img src="@Item.IMG" alt="ProductImage" class="card-img-top img-fluid">
                    <div class="card-body text-center">
                        <h4 class="card-title"><b>@Item.Name</b></h4>
                        <h4 class="card-text text-danger">@Item.Price £</h4>
                        <a class="btn" type="button" asp-page="UpdateProductPage" asp-route-id="@Item.ID"><i class="fa fa-pencil-square-o"></i></a>
                        <a class="btn" type="button" asp-page="DeleteProductPage" asp-route-id="@Item.ID"><i class="fa fa-trash"></i></a>
                    </div>
                </div>
            </a>
            </div>
        }

</div>

<a class="btn" type="button" asp-page="CreateProductPage">Create product</a>
