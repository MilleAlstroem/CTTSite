@page "{id:int}"
@model CTTSite.Pages.Store.Product.DeleteProductPageModel
@{
}

<h1>Delete Confirmation</h1>

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this product? - @Model.Item.Name</h5>
    <form method="post">
        <button type="submit" class="btn btn-danger">Yes</button>
        <a class="btn btn-primary" asp-page="AdminProductsPage">No</a>
    </form>
</div>