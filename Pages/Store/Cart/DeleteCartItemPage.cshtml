@page "{id:int}"
@model CTTSite.Pages.Store.Cart.DeleteCartItemPageModel
@{
}

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-body">
                <p class="text-white"><b>Are you sure that you want to remove this item from your cart: "@Model.CartItem.Item.Name"</b></p>
            </div>
            <div class="modal-footer">
                <form method="post">
                    <button type="submit" class="btn btn-danger">Yes</button>
                    <a class="btn btn-outline" style="color: #CCEAF6; outline-color: #CCEAF6" asp-page="SpecificUserCartPage">No</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#myModal").modal({ backdrop: "static" });
            $("#myModal").modal('show')
        })
    </script>
}