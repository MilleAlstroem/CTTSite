@page
@model CTTSite.Pages.Store.SpecificUserCartPageModel
@{
}

<body class="text-center" style="background-color:#f6d8cc;">
    <h1 class="text-center"><b>@Model.User.Identity.Name's Cart</b></h1>
    <br />

    <table class="table table-bordered table-hover table-dark" width="80%">
        <thead>
            <tr class="btn-secondary active">
                <th>Product name</th>
                <th>Product price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.CartItems != null)
            {
                foreach (Models.CartItem cartItem in Model.CartItems)
                {
                    <tr class="btn-secondary">
                        <td>
                            @cartItem.Item.Name
                        </td>
                        <td>
                            @cartItem.Item.Price
                        </td>
                        <td>
                            @cartItem.Amount
                        </td>
                        <td>
                            <a class="btn" type="button" asp-page="DeleteCartItemPage" asp-route-id="@cartItem.ID"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>

<a class="btn btn-dark" type="button" asp-page="ShippingPage" asp-route-id="">Order now</a>