@page
@model CTTSite.Pages.Admin.UpdateUserModel
@{
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
	<h1 class="text-center">Update User: @Model.user.Email</h1>

	<h3 class="text-danger">
		@Model.Message
	</h3>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
	<form method="post">
		<div class="form-group">
			<label asp-for="@Model.user.Id" class="control-label"></label>
			<input asp-for="@Model.user.Id" class="form-control" readonly />
			<span asp-validation-for="@Model.user.Id" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Email" class="control-label"></label>
			<input asp-for="@Model.Email" value="@Model.user.Email" class="form-control" />
			<span asp-validation-for="@Model.user.Email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Password" class="control-label"></label>
			<input asp-for="@Model.Password" class="form-control" />
			<span asp-validation-for="@Model.user.Password" class="text-danger"></span>
		</div>

		<p>
			<div class="form-group">
				<input type="submit" value="Update" class="btn btn-dark" />
				<a asp-page="GetAllUsers" class="btn btn-outline-dark">All Users</a>
			</div>
		</p>
	</form>
			</div>
		</div>
	</div>
	<p class="text-danger">
		Please be aware tgat if you change the password, the user will have to reset their password to login. 
		Also be aware that changing the email will change the username and may disconnect the user from some aspects of there account such as their saved forms.
		</p>
		<br />
	<p class="text-dark">
		If the details are not valid, this page will load again. If they are correct, you will be sent back to the All Users page.
	</p>
	</div>
	<div class="col-md-1"></div>
	</div>
	</div>

