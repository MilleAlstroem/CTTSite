@page
@model CTTSite.Pages.Admin.ToolsPageModel
@{
}

<div class="container-fluid">


<h1>Tools</h1>
    <br />

    <div class="row">
    @if (HttpContext.User.Identity != null && HttpContext.User.IsInRole("admin") == true)
    {
            <div class="col-3">
                <a class="btn btn-dark" asp-area="" asp-page="/Admin/GetAllUsers">See Users</a>
                <br />
                <p>View the list of all users, search users, edit and delete users and sort for staff and clients.</p>
            </div>

            <div class="col-3">
                <a class="btn btn-dark" asp-area="" asp-page="/Consultaion/GetAllConsultaionsPage">Admin Consultation</a>
                <br />
                <p>View the list of all future consultation bookings.</p>
            </div>

            <div class="col-3">
                <a class="btn btn-dark" asp-area="" asp-page="/Admin/CreateStaffUser">Create Staff User</a>
                <br />
                <p>Create new users with staff permissions.</p>
            </div>
    }
        @if (HttpContext.User.Identity != null && HttpContext.User.IsInRole("staff") == true)
        {
            <div class="col-3">
                <a class="btn btn-dark" asp-area="" asp-page="/Staff/CreateClientUser">Create Client User</a>
                <br />
                <p>Create new users with client permissions.</p>
            </div>
        }
        
    </div>
</div>