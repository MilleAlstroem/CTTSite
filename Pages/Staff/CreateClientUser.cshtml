@page
@model CTTSite.Pages.Staff.CreateClientUserModel
@{
}
<h1>Create a new Client Login</h1>

<div class="row">
    <div class="container">
    <div class=" text-danger">
            @Model.Message
    </div>
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-lable"></label>
                <input asp-for="@Model.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-lable"></label>
                <input asp-for="@Model.Password" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>
<div>
    <a asp-page="/Index">Back to Home</a>
</div>