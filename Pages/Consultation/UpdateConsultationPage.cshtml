@page
@model CTTSite.Pages.Consultation.UpdateConsultationPageModel
@{
}

<div class="container-fluid">
<div class="row">
<div class="col-md-1"></div>
    <div class="col-md-10">
<h1 class="text-center"><b>Update Consultation Timeslot</b></h1>
        <form method="post">
            <div class="form-group" hidden>
                <label asp-for="@Model.Consultation.ID" class="control-lable"></label>
                <input asp-for="@Model.Consultation.ID" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Consultation.Date" class="control-label">Date: dd/mm/yyyy</label>
                <input asp-for="@Model.Consultation.Date" class="form-control" type="date" />
                <span asp-validation-for="Consultation.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Consultation.StartTime" class="control-lable">Start Time</label>
                <input asp-for="@Model.Consultation.StartTime" class="form-control" type="time" />
                <span asp-validation-for="@Model.Consultation.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Consultation.EndTime" class="control-lable">End Time</label>
                <input asp-for="@Model.Consultation.EndTime" class="form-control" type="time" />
                <span asp-validation-for="@Model.Consultation.EndTime" class="text-danger"></span>
            </div>
            <div class="text-center">
                <p style="color: @Model.MessageColor;">@Model.Message</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-dark" />
                <a asp-page="/Consultation/GetAllConsultaionsPage" class="btn btn-outline-dark">Back</a>
            </div>
        </form>
    </div>
<div class="col-md-1"></div>
</div>
</div>
