@page "{id:int}"
@model CTTSite.Pages.Consultation.DeleteConsultationPageModel
@{
}


<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-body " style="color: #CCEAF6">
                <p><b>Are you sure you want to delete this consultation?</b></p>
                <p><b>With date: </b>@Model.Consultation.Date</p>
                <p><b>And start time: </b>@Model.Consultation.StartTime</p>
                <p><b>& end time: </b>@Model.Consultation.EndTime</p>
            </div>
            <div class="modal-footer">
                <form method="post">
                    <button type="submit" class="btn btn-danger">Yes</button>
                    <a class="btn btn-outline" style="color: #CCEAF6; outline-color: #CCEAF6" asp-page="GetAllConsultaionsPage">No</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#myModal").modal({ backdrop: "static" });
            $("#myModal").modal('show')
        })
    </script>
}