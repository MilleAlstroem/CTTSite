@page
@model CTTSite.Pages.Forms.CreateActivityListPageModel
@{
}
<h1>Create Activity List</h1>

<div class="col-md-4">
    <form method="post">
        <div hidden="hidden">
        <div class="form-group">
            <label asp-for="@Model.formActivityList.UserEmail" class="control-lable"></label>
            <input asp-for="@Model.formActivityList.UserEmail" class="form-control" value="@HttpContext.User.Identity.Name" readonly />
        </div>

        <div class="form-group">
            <label asp-for="@Model.formActivityList.Pleasure " class="control-lable">Pleasure</label>
            <input asp-for="@Model.formActivityList.Pleasure" class="form-control" value="Please Fill Out Before Submission" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.formActivityList.Exercise" class="control-lable">Exercise</label>
            <input asp-for="@Model.formActivityList.Exercise" class="form-control" value="Please Fill Out Before Submission" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.formActivityList.Achievement" class="control-lable">Achievement</label>
            <input asp-for="@Model.formActivityList.Achievement" class="form-control" value="Please Fill Out Before Submission" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.formActivityList.Social" class="control-lable">Social</label>
            <input asp-for="@Model.formActivityList.Social" class="form-control" value="Please Fill Out Before Submission" />
        </div>
        </div>

        <div class="input-group mb-3">
            <p>After creating the form, you will be able to find it on the "Forms" page under "My Forms"</p>
           <input type="submit" asp-page-handler="SaveForm" value="Create new Form" class="btn btn-primary" />
            <a class="btn" type="button" asp-page="/Forms/FormsMenuPage">Back</a>
        </div>
</form>
</div>

