@page
@model CTTSite.Pages.TheRoomBooking.DeleteRoomBookingPageModel
@{
}

<body style="background-color:#f6d8cc;">

    @if (User.Identity != null && (@Model.RoomBooking.UserEmail == User.Identity.Name || User.IsInRole("admin") == true))
    {

    <div class="text-center">
        <h1>Delete Confirmation</h1>

        <h4 class="text-danger"><b>Are you sure you want to delete this room booking?</b></h4><br />
        <br />
        <div class="text-center border border-dark" style="width:80%; margin-inline:10%">
            <br />
            <h4>@Model.RoomBooking.UserEmail</h4>
            <br />
            <h4>@Model.RoomBooking.StartDateTime   -   @Model.RoomBooking.EndDateTime</h4>
            <br />
        </div>
        <br />
        <br />
        <form method="post">
            <button type="submit" value="Delete" class="btn btn-danger" style="margin-inline:1%">Yes</button>
            <a class="btn btn-dark" style="margin-inline:1%" asp-page="/TheRoomBooking/SpecificRoomBookingPage" asp-route-id="@Model.RoomBooking.ID">No</a>
        </form>
    </div>

    }
    else
    {
        <h1 class="text-center"><b>You are not logged in as the creator of this room booking or as an admin</b></h1>
    }



</body>

