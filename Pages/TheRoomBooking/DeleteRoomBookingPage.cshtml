@page
@model CTTSite.Pages.TheRoomBooking.DeleteRoomBookingPageModel
@{
}

<body style="background-color:#f6d8cc;">

    <div class="text-center">
        <h1>Delete Confirmation</h1>

        <h4 class="text-danger"><b>Are you sure you want to delete this room booking?</b></h4><br />
        <br />
        <h4>@Model.IRoomBookingService.GetUserByRoomBooking(Model.RoomBooking).Email's Booking:</h4><br />
        <h4>@Model.RoomBooking.StartDateTime   -   @Model.RoomBooking.EndDateTime</h4><br />
        <br />

        <form method="post">
            <button type="submit" class="btn btn-danger" style="margin-inline:1%">Yes</button>
            <a class="btn btn-dark" style="margin-inline:1%" asp-page="/TheRoomBooking/SpecificRoomBookingPage" asp-route-id="@Model.RoomBooking.ID">No</a>
        </form>
    </div>

</body>

