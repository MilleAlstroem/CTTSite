@page
@model CTTSite.Pages.TheRoomBooking.SpecificRoomBookingPageModel
@{
}

<body style="background-color:#f6d8cc;">
    <div class="text-center">
        <h4><b>@Model.IRoomBookingService.GetUserByRoomBooking(Model.RoomBooking).Email's Booking:</b></h4><br />
        <br />
        <h4>@Model.RoomBooking.StartDateTime   -   @Model.RoomBooking.EndDateTime</h4><br />
        <br />
        <p><b>Description:</b></p><br />
        <p>@Model.RoomBooking.Description</p><br />
        <br />
        <a asp-page="/TheRoomBooking/AllRoomBookingsPage" class="btn btn-dark" style="margin-inline:1%">Back</a>
        @if (User.Identity != null &&  (@Model.IRoomBookingService.GetUserByRoomBooking(Model.RoomBooking).Email == User.Identity.Name || User.IsInRole("admin") == true))
        {
            <a asp-page="/TheRoomBooking/UpdateRoomBookingPage" asp-route-id="@Model.RoomBooking.ID" class="btn btn-dark" style="margin-inline:1%">Update</a>
            <a asp-page="/TheRoomBooking/DeleteRoomBookingPage" asp-route-id="@Model.RoomBooking.ID" class="btn btn-dark" style="margin-inline:1%">Delete</a>
        }
    </div>
</body>