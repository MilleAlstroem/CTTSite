        </div>

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-dark" style="margin-inline:1%" asp-page-handler="UpdateRoomBooking" />
            <a asp-page="/TheRoomBooking/SpecificRoomBookingPage" asp-route-id="@Model.RoomBooking.ID" class="btn btn-dark" style="margin-inline:1%">Back</a>
