@page
@model CTTSite.Pages.User.LogIn.LogInPageModel
@{
}
<div class="container">
    <div class="text-danger">
        @Model.Message
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Email" class="col-form-label "></label>
            <div>
                <input asp-for="Email" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <div>
                <input asp-for="Password" />
            </div>
        </div>
        <div class="form-group">
            <br />
            <button class="btn btn-dark">Log in</button>
            <a href="ForgottenPasswordPage" class="btn btn-outline-dark">Forgotten Password</a>
        </div>           
    </form>
</div>