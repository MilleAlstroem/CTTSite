@page
@model CTTSite.Pages.User.LogIn.ForgottenPasswordPageModel
@{
}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10 text-center">
<h1>Forgotten Password</h1>
<br />
<h3>@Model.Message</h3>

<div class="row">
				<div class="col-3"></div>
	<div class="col-6">
		<form method="post" class="form-inline">
			<div class="input-group mb-3">
				<input asp-for="Email" class="form-control mr-1" placeholder="Enter User Email" />
				<input type="submit" asp-page-handler="PasswordRecovery" value="Send" class="btn btn-dark" />
			</div>
		</form>
		<p>
			<a href="LogInPage" class="btn btn-outline-dark">Back</a>
		</p>
	</div>
</div>
			<div class="col-3"></div>
</div>

</div>
</div>
